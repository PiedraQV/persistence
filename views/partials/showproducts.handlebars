<section class="container row py-4">
	<div >
		<div class="d-flex py-4">
		<h4 class="px-2">Volver a la pantalla Config</h4>
		<form action="/login" method="GET">
			<div>
				<input class="btn btn-success " type='submit' value='Regresar' />
			</div>
		</form>
		<br>
		<br>	
		</div>
	</div>
	
    {{#each products}}
	{{#each this}}
            <div class="card mx-2 my-2" style="width: 18rem;">
 				 <img src={{ this.imagePath }} class="card-img-top" alt={{ this.title }}>
 				 <div class="card-body">
 				   <h5 class="card-title">{{ this.title }}</h5>
 				   <p class="card-text">{{ this.description }}</p>
				   <p class="card-text">{{ this.price }}</p>
 				   <a href="/cart/add-to-cart/{{this._id}}" class="btn btn-raised btn-primary pull-right">
                    <i class="fa fa-gift" aria-hidden="true"></i> Add to cart
                   </a>
 				 </div>
			</div>
    {{/each}}
    {{/each}}
</section>