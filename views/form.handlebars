{{#if username}}
<section class="container">
	<div class="container d-flex justify-content-between align-items-center" >
	<h2>Bienvenido</h2>
	<div class="d-flex align-items-center">
		<span class="my-2">{{username}}</span>
        <img src={{image}} class="px-2" style="width: 70px" alt="">
		
		<form action="/cart" method="GET">
			<div>
				<input class="btn btn-primary mx-2" type='submit' value='Carrito' />
			</div>
		</form>
		<form action="/product" method="GET">
			<div>
				<input class="btn btn-success mx-2" type='submit' value='Ingresar productos' />
			</div>
		</form>
		<form action="/logout" method="POST">
			<div>
				<input class="btn btn-danger mx-2" type='submit' value='Cerrar sesión' />
			</div>
		</form>
	</div>
	</div>
</section>
<br>
<br>
<div class="container d-flex">
	<h4>Ver los productos disponibles aquí</h4>
	<div  class="align-items-right">
	<form action="/product-create" method="GET">
			<div>
				<input class="btn btn-success mx-2" type='submit' value='Productos disponibles' />
			</div>
		</form>
	</div>
		
</div>
{{/if}}
<section class="container py-4"> 
	<h3>Mensajes</h3>
	<label for='email'>Email</label>
	<br>
	<input id="user-email"  type="mail" id="usermail" placeholder="Ingresa tu email">
	<form id="chat-form" >
		<label for='chatmessage'>Mensaje</label>
		<br>
		<input id="chat-message"  type="text" name="chatmessage"
			placeholder="Ingresa tu mensaje...">
		<br>
		<br>
		<button class="btn btn-primary" type="submit">Enviar</button>
	</form>
	<div id="table-chat" class="my-4"></div>
</section>